def get_matrix(n, m, value):
    if n <= 0 or m <= 0:
        return []
    matrix = []
    for _ in range(n):
        matrix.append([])
        for _ in range(m):
             matrix[-1].append(value)
    return matrix

n = 4
m = 5
value = 0

result_matrix = get_matrix(n, m, value)

result1 = get_matrix(2, 2, 10)
result2 = get_matrix(3, 5, 42)
result3 = get_matrix(4, 2, 13)
print(result1)
print(result2)
print(result3)
